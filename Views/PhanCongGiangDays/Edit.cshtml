@model UniSchedule.Models.PhanCongGiangDay

@{
    ViewBag.Title = "Chỉnh sửa phân công giảng dạy";
}

<!-- Link to Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .form-container {
        max-width: 90%; /* Flexible width for responsiveness */
        width: 700px; /* Preferred width for larger screens */
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .form-horizontal {
        width: 100%;
    }

    .form-group {
        margin-bottom: 20px;
        display: flex;
        flex-wrap: wrap; /* Allow wrapping for small screens */
        align-items: center;
        width: 100%;
        gap: 15px; /* Space between label and input */
    }

    .control-label {
        font-weight: 600;
        color: #343a40;
        flex: 0 0 120px; /* Fixed width for labels */
        text-align: right;
    }

    .input-container {
        flex: 1; /* Take remaining space */
        max-width: 500px; /* Limit input width */
        min-width: 200px; /* Ensure usability on small screens */
    }

    .form-control {
        width: 100%;
        box-sizing: border-box;
    }

    .btn-custom {
        padding: 8px 16px;
        font-size: 1rem;
        margin: 0 5px;
    }

    .btn-save {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
    }

        .btn-save:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

    .btn-back {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }

        .btn-back:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    h2, h4 {
        color: #343a40;
        font-weight: 600;
        text-align: center;
        margin-bottom: 20px;
    }

    h2 {
        font-size: 1.8rem;
    }

    h4 {
        font-size: 1.2rem;
    }

    hr {
        margin: 20px 0;
        border-color: #dee2e6;
        width: 100%;
    }

    .text-danger {
        font-size: 0.875rem;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 10px;
        width: 100%;
        flex-wrap: wrap; /* Allow buttons to wrap on small screens */
    }
</style>

<div class="form-container">
    <h2>Chỉnh sửa phân công giảng dạy</h2>
    <h4>Phân công giảng dạy</h4>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaPhanCong)

            <div class="form-group">
                @Html.LabelFor(model => model.MaGV, "Tên giảng viên", htmlAttributes: new { @class = "control-label" })
                <div class="input-container">
                    @Html.DropDownList("MaGV", null, "-- Chọn giảng viên --", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaGV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaLHP, "Tên môn học", htmlAttributes: new { @class = "control-label" })
                <div class="input-container">
                    @Html.DropDownList("MaLHP", null, "-- Chọn môn học --", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaLHP, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GhiChu, "Ghi chú", htmlAttributes: new { @class = "control-label" })
                <div class="input-container">
                    @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HocKi, "Học kỳ", htmlAttributes: new { @class = "control-label" })
                <div class="input-container">
                    @Html.EditorFor(model => model.HocKi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HocKi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NamHoc, "Năm học", htmlAttributes: new { @class = "control-label" })
                <div class="input-container">
                    @Html.EditorFor(model => model.NamHoc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NamHoc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="button-group">
                <button type="submit" class="btn btn-save btn-custom">
                    <i class="bi bi-save"></i> Lưu
                </button>
                <a href="@Url.Action("Index")" class="btn btn-back btn-custom">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
            </div>
        </div>
    }
</div>