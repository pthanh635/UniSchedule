@model UniSchedule.Models.PhanCongGiangDay

@{
    ViewBag.Title = "Chi tiết phân công giảng dạy";
}

<!-- Thêm liên kết đến Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .details-container {
        max-width: 500px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .dl-horizontal dt {
        font-weight: 600;
        color: #343a40;
        text-align: left;
        padding-right: 15px;
    }

    .dl-horizontal dd {
        margin-bottom: 15px;
        color: #495057;
    }

    .btn-custom {
        margin-right: 5px;
    }

    .btn-edit {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #212529;
    }

        .btn-edit:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }

    .btn-back {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }

        .btn-back:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    h2 {
        color: #343a40;
        font-weight: 600;
        text-align: center;
        white-space: nowrap; /* Prevent title from wrapping */
        overflow: hidden; /* Hide overflow text if too long */
        text-overflow: ellipsis; /* Add ellipsis if text overflows */
    }

    @@media (max-width: 768px) {
        h2 {
            font-size: 1.5rem; /* Reduce font size on smaller screens */
        }

        .dl-horizontal dt {
            text-align: left;
            margin-bottom: 5px;
        }

        .dl-horizontal dd {
            margin-left: 0;
        }
    }

    hr {
        margin: 20px 0;
        border-color: #dee2e6;
    }
</style>

<div class="details-container">
    <h2>Chi tiết phân công giảng dạy</h2>
    <hr />

    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.GiangVien.TenGV, "Tên giảng viên")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GiangVien.TenGV)
        </dd>

        <dt>
            @Html.LabelFor(model => model.LopHocPhan.TenMH, "Tên môn học")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LopHocPhan.TenMH)
        </dd>

        <dt>
            @Html.LabelFor(model => model.HocKi, "Học kỳ")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HocKi)
        </dd>

        <dt>
            @Html.LabelFor(model => model.NamHoc, "Năm học")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NamHoc)
        </dd>

        <dt>
            @Html.LabelFor(model => model.GhiChu, "Ghi chú")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GhiChu)
        </dd>
    </dl>

    <div class="text-end">
        <a href="@Url.Action("Edit", new { id = Model.MaPhanCong })" class="btn btn-edit btn-custom">
            <i class="bi bi-pencil-square"></i> Sửa
        </a>
        <a href="@Url.Action("Index")" class="btn btn-back btn-custom">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>
    </div>
</div>