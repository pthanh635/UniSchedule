@model UniSchedule.Models.LichDay

@{
    ViewBag.Title = "Xác nhận xóa lịch dạy";
}

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h3>Xác nhận xóa lịch dạy</h3>
        </div>
        <div class="card-body">
            <p class="text-danger">Bạn có chắc chắn muốn xóa lịch dạy sau không?</p>

            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Thứ</th>
                        <td>@Html.DisplayFor(model => model.Thu)</td>
                    </tr>
                    <tr>
                        <th>Tiết học</th>
                        <td>@Model.TietBatDau - @Model.TietKetThuc</td>
                    </tr>

                    <tr>
                        <th>Tuần học</th>
                        <td>@Model.TuanBatDau - @Model.TuanKetThuc</td>
                    </tr>

                    <tr>
                        <th>Phòng học</th>
                        <td>@Html.DisplayFor(model => model.PhongHoc.TenPhong)</td>
                    </tr>
                    <tr>
                        <th>Giảng viên phụ trách</th>
                        <td>@Model.PhanCongGiangDay.GiangVien.TenGV</td>
                    </tr>
                </tbody>
            </table>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-between">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>
