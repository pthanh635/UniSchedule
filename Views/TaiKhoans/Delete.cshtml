@model UniSchedule.Models.TaiKhoan

@{
    ViewBag.Title = "Xóa tài khoản";
}

<div class="container mt-5">
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-header bg-danger text-white text-center">
            <h2 class="mb-0">Xóa tài khoản</h2>
        </div>
        <div class="card-body">
            <h5 class="text-center text-danger mb-4">Bạn có chắc chắn muốn xóa tài khoản này không?</h5>

            <dl class="row mb-0">
                <dt class="col-sm-4">
                    Tên đăng nhập
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.TenDangNhap)
                </dd>

                <dt class="col-sm-4">
                    Mật khẩu
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.MatKhau)
                </dd>

                <dt class="col-sm-4">
                    Giảng viên
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.GiangVien.TenGV)
                </dd>

                <dt class="col-sm-4">
                    Vai trò
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.VaiTro.TenVaiTro)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <button type="submit" class="btn btn-danger me-2">Xóa</button>
                @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
            }
        </div>
    </div>
</div>
