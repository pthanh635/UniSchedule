@model UniSchedule.Models.TaiKhoan

@{
    ViewBag.Title = "Create";
}

<div class="container mt-5">
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-header bg-success text-white text-center">
            <h2 class="mb-0">Tạo Tài Khoản Mới</h2>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row mb-3">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.TenDangNhap, htmlAttributes: new { @class = "form-label" })
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "form-label" })
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.MaGV, "Giảng Viên", htmlAttributes: new { @class = "form-label" })
                    </div>
                    <div class="col-md-8">
                        @Html.DropDownList("MaGV", (SelectList)ViewBag.MaGV, "Chọn Giảng Viên", new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.MaGV, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.MaVaiTro, "Vai Trò", htmlAttributes: new { @class = "form-label" })
                    </div>
                    <div class="col-md-8">
                        @Html.DropDownList("MaVaiTro", (SelectList)ViewBag.MaVaiTro, "Chọn Vai Trò", new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.MaVaiTro, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 text-center">
                        <button type="submit" class="btn btn-success me-2">Tạo</button>
                        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
