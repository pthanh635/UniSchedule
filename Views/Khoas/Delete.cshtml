@model UniSchedule.Models.Khoa

@{
    ViewBag.Title = "Xóa Khoa";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-danger text-white text-center rounded-top-4">
                    <h2 class="mb-0">Xác Nhận Xóa</h2>
                </div>
                <div class="card-body">
                    <h4 class="text-center text-danger mb-4">Bạn có chắc chắn muốn xóa khoa này?</h4>

                    <dl class="row">
                        <dt class="col-sm-4 text-end fw-bold">
                            Tên Khoa
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.TenKhoa)
                        </dd>
                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Xóa
                            </button>
                            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
