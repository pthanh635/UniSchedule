@model UniSchedule.Models.LopHocPhan

@{
    ViewBag.Title = "Chi tiết lớp học phần";
}

<div class="container my-5">
    <h2 class="text-center text-primary fw-bold mb-4">
        <i class="fas fa-book-open me-2"></i>CHI TIẾT LỚP HỌC PHẦN
    </h2>

    <div class="card shadow-lg border-0">
        <div class="card-body p-4">
            <dl class="row mb-0">
                <dt class="col-md-4 text-muted">📘 Tên lớp học phần</dt>
                <dd class="col-md-8 fw-semibold">@Model.TenMH</dd>

                <dt class="col-md-4 text-muted">🎓 Số tín chỉ</dt>
                <dd class="col-md-8">@Model.SoTinChi</dd>

                <dt class="col-md-4 text-muted">⏳ Số tiết mỗi tuần</dt>
                <dd class="col-md-8">@Model.SoTietMoiTuan</dd>

                <dt class="col-md-4 text-muted">👥 Số lượng sinh viên</dt>
                <dd class="col-md-8">@Model.SoLuongSinhVien</dd>
            </dl>
        </div>

        <div class="card-footer bg-white text-end">
            @Html.ActionLink("✏️ Sửa", "Edit", new { id = Model.MaLHP }, new { @class = "btn btn-warning me-2" })
            @Html.ActionLink("↩️ Quay lại", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
