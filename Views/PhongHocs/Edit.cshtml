@model UniSchedule.Models.PhongHoc

@{
    ViewBag.Title = "Chỉnh sửa Phòng Học";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-warning text-dark text-center rounded-top-4">
                    <h2 class="mb-0">Chỉnh sửa Phòng Học</h2>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.MaPhong)

                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <div class="mb-3">
                            <label class="form-label" for="TenPhong">Tên Phòng</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-door-open"></i></span>
                                @Html.EditorFor(model => model.TenPhong, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên phòng" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.TenPhong, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-4">
                            <label class="form-label" for="SoLuongChoNgoi">Số lượng chỗ ngồi</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-people-fill"></i></span>
                                @Html.EditorFor(model => model.SoLuongChoNgoi, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập số lượng chỗ ngồi" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.SoLuongChoNgoi, "", new { @class = "text-danger" })
                        </div>

                        <div class="d-grid gap-2 mb-2">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-save"></i> Lưu thay đổi
                            </button>
                        </div>

                        <div class="d-grid">
                            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-outline-secondary btn-lg" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
