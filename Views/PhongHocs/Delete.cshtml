@model UniSchedule.Models.PhongHoc

@{
    ViewBag.Title = "Xóa Phòng Học";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-danger text-white text-center rounded-top-4">
                    <h2 class="mb-0">Xóa Phòng Học</h2>
                </div>
                <div class="card-body p-4">
                    <h4 class="text-center mb-4">Bạn có chắc chắn muốn xóa phòng học này?</h4>

                    <dl class="row">
                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.TenPhong)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.TenPhong)
                        </dd>

                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.SoLuongChoNgoi)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.SoLuongChoNgoi)
                        </dd>
                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-danger btn-lg">
                                Xóa
                            </button>
                            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-outline-secondary btn-lg" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
